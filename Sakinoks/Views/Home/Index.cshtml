@{
    Layout = null;

}

@model Sakinoks.Models.ViewModel


<!DOCTYPE html>
<html lang="tr">
<head>

    <!-- Basic -->
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    @foreach (var item in Model.siteAyars)
    {
        <title>@item.site_adi</title>
    
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <meta name="abstract" content="@item._abstract" />
    <meta name="author" content="info@ceoweb.net" />
    <meta name="copyright" content="@item.site_adi Tüm Hakları Saklıdır. @DateTime.Now.Year" />
    <meta name="description" content="@item.description" />
    <meta name="keywords" content="@item.keywords" />
    <meta name="robots" content="Index,follow" />
    <meta http-equiv="refresh" content="300" />
    }

    <!-- Mobile Specific Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">

    <!-- Load Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Hind:300,400,500,600,700%7CMontserrat:400,700%7CEczar:400,500,600,700,800" rel="stylesheet">

    <!-- CSS -->
    <link rel="stylesheet" href="~/Content/css/basic.css" />
    <link rel="stylesheet" href="~/Content/css/layout.css" />
    <link rel="stylesheet" href="~/Content/css/blogs.css" />
    <link rel="stylesheet" href="~/Content/css/ionicons.css" />
    <link rel="stylesheet" href="~/Content/css/magnific-popup.css" />
    <link rel="stylesheet" href="~/Content/css/animate.css" />
    <link href="https://kit-pro.fontawesome.com/releases/v5.15.4/css/pro.min.css" rel="stylesheet">

    <!--[if lt IE 9]>
    <script src="http://css3-mediaqueries-js.googlecode.com/svn/trunk/css3-mediaqueries.js"></script>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <!-- Favicon -->
    <link rel="shortcut icon" href="~/Content/images/favicons/favicon.ico">


    <style>
        .harita {
            position: relative;
            padding-bottom: 30%;
            height: 0;
            overflow: hidden;
        }

            .harita iframe {
                position: absolute;
                top: 0;
                left: 0;
                width: 100% !important;
                height: 100% !important;
            }
    </style>
</head>


<!-- Page -->
<div class="page">

    <!-- Preloader -->
    <div class="preloader">
        <div class="centrize full-width">
            <div class="vertical-center">
                <div class="spinner">
                    <div class="double-bounce1"></div>
                    <div class="double-bounce2"></div>
                </div>
            </div>
        </div>
    </div>
    @foreach (var item3 in Model.siteAyars)
    {
        <header class="header">
            <div class="fw">
                <div class="logo">
                    <a href="/Home/Index">@item3.site_adi</a>
                </div>
                <a href="#" class="menu-btn"><span></span></a>
                <div class="top-menu">
                    <ul>
                        <li><a href="#hakkinda">Hakkında</a></li>
                        <li><a href="#urunler">Ürünler</a></li>
                        <li><a href="#iletisim">İletişim</a></li>
                    </ul>
                    <a href="#" class="close"></a>
                </div>
            </div>
        </header>

        <!-- Container -->
        <div class="container">

            <!-- Section Started -->
            <div class="section started">
                <div class="slide" style="background-image: url(../..@item3.slider)"></div>
                <div class="centrize full-width">
                    <div class="vertical-center">
                        <div class="st-title align-center">
                            <div class="typing-title">
                                @foreach (var item in Model.kategorilers)
                                {
                                    if (item.aktif != false)
                                    {
                                        <p>@item.adi</p>
                                    }

                                }
                            </div>
                            <span class="typed-title"></span>
                        </div>
                    </div>
                </div>
                <a href="#" class="mouse-btn"><i class="icon ion ion-chevron-down"></i></a>
            </div>

            <!-- Section About -->
            <div class="section about align-center" id="hakkinda">
                <div class="fw">
                    <div class="text-box">
                        <h1 class="animated">@item3.hakkinda_baslik</h1>
                        <p class="animated">
                            @item3.hakkinda_yazi
                        </p>
                    </div>
                    <div class="bts">
                        <a href="#urunler" class="btn extra animated">Ürünler</a>
                    </div>
                </div>
            </div>


            <!-- Portfolio -->
            <div class="section works align-left" id="urunler">
                <div class="fw">
                    <div class="titles animated">
                        <div class="title">Ürünler</div>
                    </div>
                    <div class="filters animated">
                        <div class="f_btn active">
                            <label><input type="radio" name="fl_radio" value="box-item" />Hepsi</label>
                        </div>
                        @foreach (var item in Model.kategorilers)
                        {
                            if (item.aktif == true)
                            {
                                <div class="f_btn">
                                    <label><input type="radio" name="fl_radio" value="f-@item.etiket" />@item.adi</label>
                                </div>
                            }
                            else
                            {

                            }

                        }

                    </div>
                    <div class="row box-items">
                        @foreach (var item in Model.uruns)
                        {
                            if (item.aktif == true && item.Kategoriler.aktif == true)
                            {
                                <div class="col col-m-12 col-t-6 col-d-6 box-item f-@item.kod">
                                    <div class="item animated">
                                        <div class="desc">
                                            <div class="image">
                                                <a href="#popup-1_@item.urunID" class="has-popup"><img src="@item.resim" alt="" /></a>
                                            </div>
                                            <div class="category">@item.Kategoriler.adi</div>
                                            <div class="name">
                                                <a href="#popup-1" class="has-popup">@item.isim (@item.urunkodu)</a>
                                            </div>
                                        </div>
                                    </div>
                                    <div id="popup-1_@item.urunID" class="popup-box mfp-fade mfp-hide">
                                        <div class="content">
                                            <div class="image">
                                                <img src="@item.resim" alt="">
                                            </div>
                                            <div class="desc">
                                                <div class="category">@item.Kategoriler.adi</div>
                                                <h4>@item.isim (@item.urunkodu)</h4>
                                                <p>
                                                    @item.aciklama
                                                </p>
                                                <p>
                                                    Sipariş için;
                                                </p>
                                                @foreach (var item2 in Model.siteAyars)
                                                {
                                                    <a href="tel:@item2.telefon1" class="btn">Telefon</a>

                                                }&nbsp;
                                                @foreach (var item2 in Model.siteAyars)
                                                {
                                                   <a href="mailto:@item2.mail" class="btn">Mail</a>

                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {

                            }
                        }
                    </div>
                    <div class="clear"></div>
                </div>
            </div>

            <!-- Blog -->
            <div class="section works align-left gray" id="iletisim">
                <div class="fw">
                    <div class="titles animated">
                        <div class="title" align="center">İletişim</div>
                    </div>
                    <br />
                    <br />
                    <div class="row blog-items">
                        <div class="col col-m-12 col-t-4 col-d-4">
                            <div align="center"><a href="mailto:@item3.mail"> <i class="fad fa-envelope fa-3x"></i></a></div><br />
                            <div align="center" class="blog-item animated">

                                <a href="mailto:@item3.mail" class="name">@item3.mail</a>
                            </div>
                        </div>
                        <div class="col col-m-12 col-t-4 col-d-4">
                            <div align="center"><a href="tel:@item3.telefon1"><i class="fad fa-phone-alt fa-3x"></i></a></div><br />
                            <div align="center" class="blog-item animated">
                                @if (item3.telefon1 != null)
                                {
                                    <a href="tel:@item3.telefon1" class="name">@item3.telefon1</a>
                                }

                                @if (item3.telefon2 != null)
                                {
                                    <a href="tel:@item3.telefon2" class="name">@item3.telefon2</a>
                                }

                                @if (item3.telefon3 != null)
                                {
                                    <a href="tel:@item3.telefon3" class="name">@item3.telefon3</a>
                                }


                            </div>
                        </div>
                        <div class="col col-m-12 col-t-4 col-d-4">
                            <div align="center"> <i class="fad fa-map-marked-alt fa-3x"></i></div><br />
                            <div align="center" class="blog-item animated">
                                <a href="#" class="name">
                                    @item3.adres
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="clear"></div>
                </div>
                @foreach (var item6 in Model.siteAyars)
                {
                    if (item6.harita == null || item6.harita == "")
                    {

                    }
                    else
                    {
                        <div class="harita">
                            <iframe src="@item6.harita" width="1900" height="600" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                        </div>
                    }

                }
            </div>

        </div>
    }
</div>

<!-- Footer -->
<footer class="align-center">
    @foreach (var item5 in Model.siteAyars)
    {
        <div class="copy animated">© @DateTime.Now.Year @item5.site_adi. all rights reserved.<i class="fad fa-heart"></i> Design by <a href="https://ceoweb.net/">ceoweb</a></div>
    }

</footer>


<!-- jQuery Scripts -->
<script src="~/Content/js/jquery.min.js"></script>
<script src="~/Content/js/jquery.validate.js"></script>
<script src="~/Content/js/masonry.pkgd.js"></script>
<script src="~/Content/js/imagesloaded.pkgd.js"></script>
<script src="~/Content/js/masonry-filter.js"></script>
<script src="~/Content/js/magnific-popup.js"></script>
<script src="~/Content/js/scrollreveal.js"></script>
<script src="~/Content/js/jquery.mb.YTPlayer.js"></script>
<script src="~/Content/js/particles.js"></script>
<script src="~/Content/js/typed.js"></script>

<!-- Main Scripts -->
<script src="~/Content/js/main.js"></script>
</html>

