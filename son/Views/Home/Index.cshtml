@{
    ViewBag.Title = "sakinoks.com";
}

@model Sakinoks.Models.ViewModel



<!-- Page -->
<div class="page">

    <!-- Preloader -->
    <div class="preloader">
        <div class="centrize full-width">
            <div class="vertical-center">
                <div class="spinner">
                    <div class="double-bounce1"></div>
                    <div class="double-bounce2"></div>
                </div>
            </div>
        </div>
    </div>

    <header class="header">
        <div class="fw">
            <div class="logo">
                <a href="/Home/Index">SAKİNOKS</a>
            </div>
            <a href="#" class="menu-btn"><span></span></a>
            <div class="top-menu">
                <ul>
                    <li><a href="#hakkinda">Hakkında</a></li>
                    <li><a href="#urunler">Ürünler</a></li>
                    <li><a href="#iletisim">İletişim</a></li>
                </ul>
                <a href="#" class="close"></a>
            </div>
        </div>
    </header>

    <!-- Container -->
    <div class="container">

        <!-- Section Started -->
        <div class="section started">
            <div class="slide" style="background-image: url(../../Content/images/slide-bg-1.png)"></div>
            <div class="centrize full-width">
                <div class="vertical-center">
                    <div class="st-title align-center">
                        <div class="typing-title">
                            @foreach (var item in Model.kategorilers)
                            {
                                if (item.aktif != false)
                                {
                                    <p>@item.adi</p>
                                }

                            }
                        </div>
                        <span class="typed-title"></span>
                    </div>
                </div>
            </div>
            <a href="#" class="mouse-btn"><i class="icon ion ion-chevron-down"></i></a>
        </div>

        <!-- Section About -->
        <div class="section about align-center" id="hakkinda">
            <div class="fw">
                <div class="text-box">
                    <h1 class="animated">Sakinoks Paslanmaz Sektörüne,<br /> Endüstriyel & Gıda Malzemeleri <br />ile Hizmet Vermektedir.</h1>
                    <p class="animated">
                        Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque <br />laudantium, totam rem aperiam, eaque ipsa quae ab illo inventore veritatis et quasi <br />architecto beatae vitae dicta sunt explicabo. Nemo enim ipsam voluptatem quia voluptas <br />sit aspernatur aut odit aut fugit. Sed ut perspiciatis unde omnis iste natus error.
                    </p>
                </div>
                <div class="bts">
                    <a href="#urunler" class="btn extra animated">Ürünler</a>
                </div>
            </div>
        </div>


        <!-- Portfolio -->
        <div class="section works align-left" id="urunler">
            <div class="fw">
                <div class="titles animated">
                    <div class="title">Ürünler</div>
                </div>
                <div class="filters animated">
                    <div class="f_btn active">
                        <label><input type="radio" name="fl_radio" value="box-item" />Hepsi</label>
                    </div>
                    @foreach (var item in Model.kategorilers)
                    {
                        if (item.aktif == true)
                        {
                            <div class="f_btn">
                                <label><input type="radio" name="fl_radio" value="f-@item.etiket" />@item.adi</label>
                            </div>
                        }
                        else
                        {

                        }

                    }

                </div>
                <div class="row box-items">
                    @foreach (var item in Model.uruns)
                    {
                        if (item.aktif == true && item.Kategoriler.aktif == true)
                        {
                            <div class="col col-m-12 col-t-6 col-d-6 box-item f-@item.kod">
                                <div class="item animated">
                                    <div class="desc">
                                        <div class="image">
                                            <a href="#popup-1_@item.urunID" class="has-popup"><img src="@item.resim" alt="" /></a>
                                        </div>
                                        <div class="category">@item.Kategoriler.adi</div>
                                        <div class="name">
                                            <a href="#popup-1" class="has-popup">@item.isim</a>
                                        </div>
                                    </div>
                                </div>
                                <div id="popup-1_@item.urunID" class="popup-box mfp-fade mfp-hide">
                                    <div class="content">
                                        <div class="image">
                                            <img src="@item.resim" alt="">
                                        </div>
                                        <div class="desc">
                                            <div class="category">@item.Kategoriler.adi</div>
                                            <h4>@item.isim</h4>
                                            <p>
                                                @item.aciklama
                                            </p>
                                            <p>
                                                Sipariş için;
                                            </p>
                                            <a href="tel:+90 530 375 11 25" class="btn">Telefon</a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a href="mailto:info@sakinoks.com" class="btn">Mail</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {

                        }
                    }
                </div>
                <div class="clear"></div>
            </div>
        </div>

        <!-- Blog -->
        <div class="section works align-left gray" id="iletisim">
            <div class="fw">
                <div class="titles animated">
                    <div class="title" align="center">İletişim</div>
                </div>
                <br />
                <br />
                <div class="row blog-items">
                    <div class="col col-m-12 col-t-4 col-d-4">
                        <div align="center"><a href="mailto:info@sakinoks.com"> <i class="fad fa-envelope fa-3x"></i></a></div><br />
                        <div align="center" class="blog-item animated">

                            <a href="mailto:info@sakinoks.com" class="name">info@sakinoks.com</a>
                        </div>
                    </div>
                    <div class="col col-m-12 col-t-4 col-d-4">
                        <div align="center"><a href="tel:+90 530 375 11 25"><i class="fad fa-phone-alt fa-3x"></i></a></div><br />
                        <div align="center" class="blog-item animated">
                            <a href="tel:+90 530 375 11 25" class="name">+90 530 375 11 25</a>

                        </div>
                    </div>
                    <div class="col col-m-12 col-t-4 col-d-4">
                        <div align="center"> <i class="fad fa-map-marked-alt fa-3x"></i></div><br />
                        <div align="center" class="blog-item animated">
                            <a href="#" class="name">
                                Yeşiltepe Mah. 8032 Sk. No: 1 İç Kapı No: A Erenler / Sakarya
                            </a>
                        </div>
                    </div>
                </div>
                <div class="clear"></div>
            </div>
            <div class="harita">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3023.15103831956!2d30.390129315699035!3d40.73670194404024!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14ccb3acfe4630ff%3A0xcdc1f28789105a44!2sYe%C5%9Filtepe%2C%208032.%20Sk.%20No%3A1%2C%2054200%20Sakarya%201.%20Organize%20Sanayi%20B%C3%B6lgesi%2FErenler%2FSakarya!5e0!3m2!1str!2str!4v1634694557665!5m2!1str!2str" width="1900" height="600" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
            </div>
        </div>

    </div>
</div>


